<%= provide(:title, @user.name) %>

<% if current_user == @user %>
  <div class="row meme-creation">
    <%= render 'shared/meme_form' %>
  </div>
<% else %>
  <div class="col-md-4 col-md-offset-2 avatar">
    <% if @user.avatar_url %>
      <img src="<%= @user.avatar_url(:thumb) %>">
    <% else %>
      <i class="glyphicon glyphicon-user" id="default-avatar-image"></i>
    <% end %>
  </div>
<% end %>
<div class="row">
  <div class="col-md-8 col-md-offset-2 meme-thumbnails">
    <% if @user.memes.any? %>
      <% if @tag %>
        <% if current_user?(@user) %>
          <h3>Muh Saved Memes with tag <%= @tag %>: <%= @user.memes.tagged_with(@tag).count %></h3>
        <% else %>
          <h3><%= @user.name %>'s Saved Memes with tag <%= @tag %>: <%= @user.memes.tagged_with(@tag).count %></h3>
        <% end %>
        <%= link_to "Show All", user_path(@user), class: "btn btn-primary" %>
      <% else %>
      <% if current_user?(@user) %>
        <h3>Muh Saved Memes (<%= @user.memes.count %>)</h3>
      <% else %>
        <h3><%= @user.name %>'s Saved Memes (<%= @user.memes.count %>)</h3>
      <% end %>
        <div id="tag-cloud">
          <% tag_cloud @user.memes.tag_counts, %w[s m l] do |tag, css_class| %>
            <%= link_to tag.name, user_tag_path(@user, tag.name), class: css_class %>
          <% end %>
        </div>
      <% end %>
      <ul class="memes">
        <%= render @memes %>
      </ul>
      <%= will_paginate @memes %>
    <% end %>
  </div>
</div>
