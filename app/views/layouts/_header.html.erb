<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <nav class="col-md-3 pull-left">
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "Muh Memes", root_path, id: "logo"%></li>
      </ul>
    </nav>
    <nav class="col-md-3 pull-right">
      <ul class="nav navbar-nav navbar-right">
        <li class="header-item"><%= link_to "Home", root_path %></li>
        <li class="header-item"><%= link_to "Contact", contact_path %></li>
        <% if logged_in? %>
        <li><%= link_to "Users", users_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <% if current_user && current_user.avatar %>
              <span class="dropdown-toggle"><%=image_tag(current_user.avatar_url(:icon)) %></span>
            <% else %>
              <span class="dropdown-toggle glyphicon glyphicon-user"></span>
            <% end %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Log out", logout_path, method: "delete" %></li>
          </ul>
        </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>