<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <nav>
      <div class="pull-left">
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Muh Memes", root_path, id: "logo"%></li>
          <li>
            <%= link_to root_path do %>
              <%= image_tag('panda_icon', :alt => "panda", :size => '50x50') %>
            <% end %>
          </li>
        </ul>
      </div>
      <div class="pull-right navbar-flexbox-center">
        <div class="navbar-header" id="nav-button">
          <button type="button" class="navbar-toggle navbar-btn" data-toggle="collapse" data-target="#site-links">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="site-links">
          <ul class="nav navbar-nav">
            <li class="header-item"><%= link_to "Home", root_path %></li>
            <li class="header-item"><%= link_to "Contact", contact_path %></li>
            <% if logged_in? %>
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Create", current_user %></li>
            <% end %>
          </ul>
        </div>
        <div id="profile-dropdown">
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <% if current_user.avatar_url(:icon) %>
                    <span class="dropdown-toggle"><%=image_tag(current_user.avatar_url(:icon)) %></span>
                  <% else %>
                    <i class="glyphicon glyphicon-user"></i>
                  <% end %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "My Memes", current_user, class: "dropdown-item" %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user), class: "dropdown-item" %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Log out", logout_path, method: "delete", class: "dropdown-item" %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>