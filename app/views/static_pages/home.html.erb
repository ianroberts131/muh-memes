<% if !current_user %>  
  <div class="center jumbotron black-background">
    <h1>Muh Memes</h1>
    <p>A community for creating, saving, and sharing memes!</p>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% else %>

  <div class="center jumbotron">
    <h1>Muh Memes</h1>
  </div>
  <div class="row meme-index">
    <div class="col-md-8 col-md-offset-2 meme-thumbnails">
      <% if @tag %>
        <p>Memes with tag: <%= @tag %></p>
        <%= link_to "Show All", root_path, class: "btn btn-primary" %>
      <% else %>
      <div id="tag-cloud">
        <% tag_cloud @memes.tag_counts, %w[s m l] do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
      </div>
      <% end %>
      <ul class="memes">
        <% @memes.each do |meme| %>
          <li id="meme-<%= meme.id %>">  
            <span class="image-thumb"><%= link_to image_tag(meme.image_url(:thumb)), user_meme_path(meme.user, meme) if meme.image? %></span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

<% end %>


